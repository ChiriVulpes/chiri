$font-small: 16px
$font-large: 32px

$space-1: 2px
$space-2: 4px
$space-3: 8px
$space-4: 16px
$space-5: 32px

%font-small: font-size: $font-small
%font-large: font-size: $font-large 

%borderless: border: none
%border-1: border: 1px solid
%border-2: border: 2px solid

%border-radius-1: border-radius: $space-1
%border-radius-2: border-radius: $space-2
%border-radius-3: border-radius: $space-3
%border-radius-4: border-radius: $space-4
%border-radius-5: border-radius: $space-5
